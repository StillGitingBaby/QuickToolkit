@page
@model QuickToolbox.Pages.Tools.SavingsCalculatorModel
@{
    ViewData["Title"] = "Savings Goal Calculator";
}

<section class="tool-page">
    <h2>Savings Goal Calculator</h2>
    <p>
        Estimate how long it could take to reach a savings goal with regular contributions and interest.
    </p>

    <div class="tool-layout">
        <div class="tool-input">
            <div class="form-row">
                <label for="sv-start">Current balance</label>
                <input id="sv-start" type="number" min="0" step="100" value="0" />
            </div>

            <div class="form-row">
                <label for="sv-goal">Savings goal</label>
                <input id="sv-goal" type="number" min="0" step="100" value="10000" />
            </div>

            <div class="form-row">
                <label for="sv-monthly">Monthly contribution</label>
                <input id="sv-monthly" type="number" min="0" step="10" value="200" />
            </div>

            <div class="form-row">
                <label for="sv-rate">Annual interest rate (%)</label>
                <input id="sv-rate" type="number" min="0" step="0.1" value="3" />
            </div>

            <div class="form-row">
                <label for="sv-max-years">Maximum years to simulate</label>
                <input id="sv-max-years" type="number" min="1" max="100" step="1" value="50" />
            </div>

            <div class="form-row">
                <button type="button" id="sv-calc-btn">Calculate</button>
            </div>
        </div>

        <div class="tool-stats">
            <h3>Results</h3>
            <ul>
                <li>Time to reach goal: <strong id="sv-time">–</strong></li>
                <li>Total contributions: <strong id="sv-total-contrib">–</strong></li>
                <li>Total interest earned: <strong id="sv-total-interest">–</strong></li>
                <li>Final balance: <strong id="sv-final-balance">–</strong></li>
            </ul>

            <section class="savings-chart">
                <h3>Balance over time</h3>
                <div class="loan-chart-wrapper">
                    <canvas id="savings-balance-chart"></canvas>
                </div>
            </section>


            <p class="tool-note">
                This is a simple projection. Real returns may vary and this does not include fees or tax.
            </p>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/savings-calculator.js"></script>
}
