@page
@model QuickToolbox.Pages.Tools.ThemePreviewModel

@{
    ViewData["Title"] = "UI Theme Preview – QuickToolkit";
    ViewData["Description"] =
        "Preview colour themes, typography and UI components in light and dark mode to test design ideas quickly.";
}

@section HeadMeta {
    <script type="application/ld+json">
        {
          "@@context": "https://schema.org/",
          "@@type": "CreativeWork",
          "name": "UI Theme Preview",
          "description": "Preview colour themes, typography and UI components in light and dark mode to test design ideas quickly.",
          "url": "https://quicktoolkit.co.uk/tools/themepreview/"
        }
    </script>
}

<section class="tool-page">
    <header class="tool-header">
        <h2>Theme Preview</h2>
        <p>
            Tweak your brand colours, spacing, shadows and typography and see how a realistic
            app layout would look.
        </p>
    </header>

    <div class="tp-split-layout">
        <!-- LEFT: CONTROL PANEL -->
        <section class="tool-section tool-input">
            <h3 class="tool-section-title">Theme settings</h3>

            <!-- Brand colours -->
            <div class="form-group">
                <h4 class="tool-subtitle">Brand colours</h4>
                <div class="two-col">
                    <div class="form-row">
                        <label class="form-label" for="tp-primary">Primary</label>
                        <input id="tp-primary" type="color" class="form-input-colour" value="#6366f1" />
                    </div>
                    <div class="form-row">
                        <label class="form-label" for="tp-secondary">Secondary</label>
                        <input id="tp-secondary" type="color" class="form-input-colour" value="#64748b" />
                    </div>
                    <div class="form-row">
                        <label class="form-label" for="tp-accent">Accent</label>
                        <input id="tp-accent" type="color" class="form-input-colour" value="#ec4899" />
                    </div>
                    <div class="form-row">
                        <label class="form-label" for="tp-success">Success</label>
                        <input id="tp-success" type="color" class="form-input-colour" value="#22c55e" />
                    </div>
                    <div class="form-row">
                        <label class="form-label" for="tp-warning">Warning</label>
                        <input id="tp-warning" type="color" class="form-input-colour" value="#facc15" />
                    </div>
                    <div class="form-row">
                        <label class="form-label" for="tp-danger">Danger</label>
                        <input id="tp-danger" type="color" class="form-input-colour" value="#ef4444" />
                    </div>
                </div>
                <p class="tool-note small">
                    These drive buttons, pills and alert states. Success / warning / danger feed into the preview,
                    not fixed colours.
                </p>
            </div>

            <!-- Background / text colours -->
            <div class="form-group">
                <h4 class="tool-subtitle">Surface / text colours</h4>
                <div class="two-col">
                    <div class="form-row">
                        <label class="form-label" for="tp-bg">App background</label>
                        <input id="tp-bg" type="color" class="form-input-colour" value="#0f172a" />
                    </div>
                    <div class="form-row">
                        <label class="form-label" for="tp-surface">Cards / surfaces</label>
                        <input id="tp-surface" type="color" class="form-input-colour" value="#111827" />
                    </div>
                    <div class="form-row">
                        <label class="form-label" for="tp-text">Main text</label>
                        <input id="tp-text" type="color" class="form-input-colour" value="#e5e7eb" />
                    </div>
                    <div class="form-row">
                        <label class="form-label" for="tp-muted">Muted text</label>
                        <input id="tp-muted" type="color" class="form-input-colour" value="#9ca3af" />
                    </div>
                </div>
            </div>

            <!-- Mode & typography -->
            <div class="form-group">
                <h4 class="tool-subtitle">Mode & typography</h4>

                <div class="tp-toggle-row">
                    <div class="tp-toggle-label">
                        <strong>Dark mode preview</strong><br />
                        <span class="tool-note small">Toggle between dark and light theme styles.</span>
                    </div>
                    <button type="button" class="tp-toggle tp-toggle-on" id="tp-dark-toggle">
                        <span class="tp-toggle-thumb"></span>
                    </button>
                    <input type="checkbox" id="tp-dark-mode" class="hidden" checked />
                </div>

                <div class="tp-form-row two-col" style="margin-top: 0.75rem;">
                    <div>
                        <label class="form-label" for="tp-font-family">Font family</label>
                        <select id="tp-font-family" class="form-input">
                            <option value="system">System UI</option>
                            <option value="serif">Serif</option>
                            <option value="mono">Monospace</option>
                        </select>
                    </div>
                    <div>
                        <label class="form-label" for="tp-font-size-scale">Base font size</label>
                        <select id="tp-font-size-scale" class="form-input">
                            <option value="0">Compact (13px)</option>
                            <option value="1" selected>Normal (14px)</option>
                            <option value="2">Comfortable (16px)</option>
                        </select>
                    </div>
                </div>
            </div>

            <!-- Spacing & elevation -->
            <div class="form-group">
                <h4 class="tool-subtitle">Spacing & elevation</h4>

                <div class="slider-row">
                    <div class="form-label">Border radius</div>
                    <input id="tp-radius" type="range" min="6" max="24" value="12" />
                    <div class="slider-value" id="tp-radius-value">12px</div>
                </div>

                <div class="slider-row">
                    <div class="form-label">Shadow strength</div>
                    <input id="tp-shadow" type="range" min="0" max="3" value="2" />
                    <div class="slider-value" id="tp-shadow-value">Medium</div>
                </div>

                <div class="slider-row">
                    <div class="form-label">Spacing scale</div>
                    <input id="tp-spacing" type="range" min="0" max="4" value="2" />
                    <div class="slider-value" id="tp-spacing-value">Normal</div>
                </div>
            </div>

            <!-- Export tokens -->
            <div class="form-group">
                <h4 class="tool-subtitle">Export tokens</h4>
                <p class="tool-note small" style="margin-bottom: 0.4rem;">
                    Generate design tokens from the current preview and paste them into your project.
                </p>

                <div class="tp-export-controls">
                    <div class="tp-export-left">
                        <label class="form-label" for="tp-export-format">Format</label>
                        <select id="tp-export-format" class="form-input tp-export-select">
                            <option value="css">CSS custom properties</option>
                            <option value="tailwind">Tailwind config snippet</option>
                            <option value="json">JSON</option>
                        </select>
                    </div>
                    <div class="tp-export-buttons">
                        <button type="button" id="tp-export-refresh" class="btn btn-secondary btn-xs">
                            Refresh
                        </button>
                        <button type="button" id="tp-export-copy" class="btn btn-secondary btn-xs">
                            Copy
                        </button>
                    </div>
                </div>

                <textarea id="tp-export-output"
                          class="tp-export-output"
                          rows="8"
                          readonly></textarea>
            </div>

            <!-- Footer -->
            <div class="tp-form-footer">
                <button type="button" id="tp-reset" class="btn btn-secondary">
                    Reset to defaults
                </button>
            </div>
        </section>

        <!-- SPLITTER -->
        <div id="tp-splitter" class="tp-splitter" aria-hidden="true"></div>

        <!-- RIGHT: PREVIEW -->
        <section class="tool-section tool-output">
            <div class="tp-preview-header-row">
                <div>
                    <div class="tool-section-title" style="margin-bottom: 0.2rem;">Live preview</div>
                    <p class="tool-note small" style="margin: 0;">
                        A sample dashboard UI that uses your tokens for buttons, pills, alerts and layout.
                    </p>
                </div>
            </div>

            <div id="tp-preview-wrapper" class="tp-preview-wrapper">
                <div id="tp-preview" class="tp-theme tp-theme-dark">
                    <header class="tp-app-header">
                        <div class="tp-app-brand">
                            <div class="tp-app-logo">QT</div>
                            <div>
                                <div class="tp-app-name">QuickToolkit</div>
                                <div class="tp-app-subtitle">Design system preview</div>
                            </div>
                        </div>
                        <nav class="tp-app-nav">
                            <button class="tp-btn tp-btn-ghost tp-btn-sm">Dashboard</button>
                            <button class="tp-btn tp-btn-ghost tp-btn-sm">Components</button>
                            <button class="tp-btn tp-btn-primary tp-btn-sm">New project</button>
                        </nav>
                    </header>

                    <main class="tp-app-main">
                        <div class="tp-layout">
                            <!-- Sidebar -->
                            <aside class="tp-sidebar">
                                <div class="tp-sidebar-section">
                                    <div class="tp-sidebar-title">Preview sections</div>
                                    <ul class="tp-sidebar-list">
                                        <li class="active" data-target="tp-section-buttons">Buttons</li>
                                        <li data-target="tp-section-pills">Status pills</li>
                                        <li data-target="tp-section-alerts">Alerts</li>
                                        <li data-target="tp-section-cards">Cards & layout</li>
                                    </ul>
                                </div>

                                <div class="tp-sidebar-section">
                                    <div class="tp-sidebar-title">Quick stats</div>
                                    <div class="tp-pill-row">
                                        <span class="tp-pill tp-pill-success">Live</span>
                                        <span class="tp-pill tp-pill-warning">Pending</span>
                                        <span class="tp-pill tp-pill-danger">Errors</span>
                                        <span class="tp-pill tp-pill-soft">Draft</span>
                                    </div>
                                </div>
                            </aside>

                            <!-- Main content -->
                            <section class="tp-content">
                                <!-- Buttons block -->
                                <article id="tp-section-buttons" class="tp-block">
                                    <div class="tp-block-header">
                                        <h3 class="tp-block-title">Buttons</h3>
                                        <p class="tp-block-subtitle">
                                            Primary, secondary and ghost buttons wired to your tokens.
                                        </p>
                                    </div>
                                    <div class="tp-block-body">
                                        <div class="tp-btn-grid">
                                            <button class="tp-btn tp-btn-primary">Primary action</button>
                                            <button class="tp-btn tp-btn-secondary">Secondary</button>
                                            <button class="tp-btn tp-btn-ghost">Ghost</button>
                                            <button class="tp-btn tp-btn-outline">Outline</button>
                                            <button class="tp-btn tp-btn-primary tp-btn-loading">
                                                <span class="tp-spinner" aria-hidden="true"></span>
                                                Saving…
                                            </button>
                                            <button class="tp-btn tp-btn-primary" disabled>Disabled</button>
                                        </div>
                                    </div>
                                </article>

                                <!-- Pills block -->
                                <article id="tp-section-pills" class="tp-block">
                                    <div class="tp-block-header">
                                        <h3 class="tp-block-title">Status pills</h3>
                                        <p class="tp-block-subtitle">
                                            Uses success / warning / danger tokens so you can tune states.
                                        </p>
                                    </div>
                                    <div class="tp-block-body">
                                        <div class="tp-pill-row">
                                            <span class="tp-pill tp-pill-success">Deployed</span>
                                            <span class="tp-pill tp-pill-warning">Needs review</span>
                                            <span class="tp-pill tp-pill-danger">Failed check</span>
                                            <span class="tp-pill tp-pill-soft">Archived</span>
                                        </div>
                                    </div>
                                </article>

                                <!-- Alerts block -->
                                <article id="tp-section-alerts" class="tp-block">
                                    <div class="tp-block-header">
                                        <h3 class="tp-block-title">Alerts</h3>
                                        <p class="tp-block-subtitle">
                                            All four alert variants respond to your colour changes.
                                        </p>
                                    </div>
                                    <div class="tp-block-body">
                                        <div class="tp-alert-stack">
                                            <div class="tp-alert tp-alert-success">
                                                <div class="tp-alert-title">Deployment successful</div>
                                                <div class="tp-alert-text">
                                                    All checks passed and your build is now live.
                                                </div>
                                            </div>
                                            <div class="tp-alert tp-alert-info">
                                                <div class="tp-alert-title">Information</div>
                                                <div class="tp-alert-text">
                                                    A new update is available for the CLI tools.
                                                </div>
                                            </div>
                                            <div class="tp-alert tp-alert-warning">
                                                <div class="tp-alert-title">Attention needed</div>
                                                <div class="tp-alert-text">
                                                    Some environments have not been configured yet.
                                                </div>
                                            </div>
                                            <div class="tp-alert tp-alert-danger">
                                                <div class="tp-alert-title">Error</div>
                                                <div class="tp-alert-text">
                                                    The last run failed. Check your error logs and try again.
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </article>

                                <!-- Cards block -->
                                <article id="tp-section-cards" class="tp-block">
                                    <div class="tp-block-header">
                                        <h3 class="tp-block-title">Cards & layout</h3>
                                        <p class="tp-block-subtitle">
                                            See spacing, radius and shadows across content.
                                        </p>
                                    </div>
                                    <div class="tp-block-body">
                                        <div class="tp-card-grid">
                                            <div class="tp-card">
                                                <div class="tp-card-header">
                                                    <h4 class="tp-card-title">Project overview</h4>
                                                    <span class="tp-pill tp-pill-success">Healthy</span>
                                                </div>
                                                <p class="tp-card-body-text">
                                                    12 active components, 4 in review and 1 flagged for refactor.
                                                </p>
                                                <div class="tp-card-footer">
                                                    <button class="tp-btn tp-btn-primary tp-btn-sm">Open</button>
                                                    <button class="tp-btn tp-btn-ghost tp-btn-sm">Analytics</button>
                                                </div>
                                            </div>

                                            <div class="tp-card tp-card-muted">
                                                <div class="tp-card-header">
                                                    <h4 class="tp-card-title">Activity</h4>
                                                    <span class="tp-pill tp-pill-soft">Last 24 hours</span>
                                                </div>
                                                <p class="tp-card-body-text">
                                                    8 deployments, 23 commits and 4 pull requests merged.
                                                </p>
                                                <div class="tp-card-footer">
                                                    <button class="tp-btn tp-btn-secondary tp-btn-sm">View logs</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </article>
                            </section>
                        </div>
                    </main>
                </div>
            </div>
        </section>
    </div>
</section>



@section Scripts {
    <script src="~/js/theme-preview.js" asp-append-version="true"></script>
}
