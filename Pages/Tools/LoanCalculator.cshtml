@page
@model QuickToolbox.Pages.Tools.LoanCalculatorModel
@{
    ViewData["Title"] = "Loan Repayment Calculator";
}

<section class="tool-page">
    <h2>Loan Repayment Calculator</h2>
    <p>
        Estimate your monthly repayment, total amount repaid, and total interest for a fixed-rate loan.
    </p>

    <div class="tool-layout loan-layout">
        <div class="tool-input">
            <div class="form-row">
                <label for="loan-amount">Loan amount</label>
                <input id="loan-amount" type="number" min="0" step="100" value="10000" />
            </div>

            <div class="form-row">
                <label for="loan-rate">Annual interest rate (%)</label>
                <input id="loan-rate" type="number" min="0" step="0.1" value="5" />
            </div>

            <div class="form-row">
                <label for="loan-years">Term (years)</label>
                <input id="loan-years" type="number" min="1" max="40" step="1" value="5" />
            </div>

            <div class="form-row">
                <label for="loan-extra">Extra monthly payment (optional)</label>
                <input id="loan-extra" type="number" min="0" step="10" value="0" />
            </div>

            <div class="form-row">
                <button type="button" id="loan-calc-btn">Calculate</button>
            </div>
        </div>

        <div class="tool-stats loan-results">
            <h3>Results</h3>
            <ul>
                <li>Monthly payment: <strong id="loan-monthly">–</strong></li>
                <li>Total paid: <strong id="loan-total-paid">–</strong></li>
                <li>Total interest: <strong id="loan-total-interest">–</strong></li>
                <li>Estimated payoff time: <strong id="loan-payoff-time">–</strong></li>
            </ul>

            <p class="tool-note">
                This is a simple fixed-rate amortisation estimate and does not account for fees or changing interest rates.
            </p>
        </div>

        <section class="loan-chart">
            <h3>Balance over time</h3>
            <div class="loan-chart-wrapper">
                <canvas id="loan-balance-chart"></canvas>
            </div>
        </section>


        <section class="loan-amortisation">
            <h3>Amortisation schedule</h3>
            <p class="tool-note">
                Showing how each payment is split between interest and principal, and how the balance reduces over time.
            </p>

            <div class="loan-amortisation-table-wrapper">
                <table class="loan-amort-table">
                    <thead>
                        <tr>
                            <th>Month</th>
                            <th>Payment</th>
                            <th>Interest</th>
                            <th>Principal</th>
                            <th>Balance</th>
                        </tr>
                    </thead>
                    <tbody id="loan-amort-body">
                        <tr>
                            <td colspan="5">Enter loan details above to see the schedule.</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </section>

    </div>
</section>

@section Scripts {
    <script src="~/js/loan-calculator.js"></script>
}

<style>
    .loan-amortisation {
        margin-top: 1.5rem;
    }

    .loan-amortisation-table-wrapper {
        max-height: 400px;
        overflow-y: auto;
        border: 1px solid #e0e0e0;
        border-radius: 4px;
    }

    .loan-amort-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 0.9rem;
    }

        .loan-amort-table th,
        .loan-amort-table td {
            padding: 0.4rem 0.5rem;
            border-bottom: 1px solid #f0f0f0;
            text-align: right;
        }

            .loan-amort-table th:first-child,
            .loan-amort-table td:first-child {
                text-align: left;
            }

        .loan-amort-table thead {
            position: sticky;
            top: 0;
            background: #fafafa;
        }

</style>
